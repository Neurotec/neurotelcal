<%= link_to I18n.t('back'), groups_path, :class => "button negative" %>
<%= link_to I18n.t('edit'), edit_group_path(@group), :class => "button" %> 

<h1><%= I18n.t 'group.show.title'%></h1>
<p id="notice"><%= notice %></p>

<p>
  <b><%= I18n.t 'defaults.name'%>:</b>
  <%= @group.name %>
</p>
<p>
  <b><%= I18n.t('group.l.messages_share_clients')%>:</b>
  <%= @group.messages_share_clients%>
</p>
<p>
  <b><%= I18n.t 'defaults.campaign'%>:</b>
  <%= @group.campaign.name %>
</p>

<table>
  <caption><%= I18n.t 'defaults.clients'%></caption>
  <tr>
    <th><%= I18n.t 'clients.fullname'%></th>
  </tr>

  <% @group.client.all.each do |client| %>
  <tr>
    <td><%= client.fullname%></td>
  </tr>
  <% end %>
</table>

