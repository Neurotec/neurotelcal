<h1>Listing distributors for <%= @campaign.name %></h1>

<table>
  <tr>
    <th>Description</th>
    <th>Filter</th>
    <th>Plivo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @distributors.each do |distributor| %>
  <tr>
    <td><%= distributor.filter %></td>
    <td><%= distributor.description %></td>
    <td><%= distributor.plivo.caller_name %></td>
    <td><%= link_to I18n.t('show'), distributor %></td>
    <td><%= link_to I18n.t('edit'), edit_distributor_path(distributor) %></td>
    <td><%= link_to I18n.t('destroy'), distributor, confirm: I18n.t('are_you_sure'), method: :delete %></td>
  </tr>
<% end %>
</table>

