<h3>Importador de CDRs de Freeswitch.</h3>
<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice]%></p>
<% end %>
<% if flash[:error] %>
 <p class="error"><%= flash[:error]%></p>
<% end %>


<%= form_tag({:action => :create_import_cdr}, :multipart => true) do%>
<div class="field">
  <%= label_tag('Local CDR Sqlite')%><br />
  <%= text_field_tag('path_cdr')%>
</div>
<div class="field">
  <%= label_tag('Upload CDRs sqlite')%><br />
  <%= file_field_tag('upload_cdr')%>
</div>
<%= submit_tag()%>
<% end %>
