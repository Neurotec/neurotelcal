<%= simple_form_for(@entity) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slogan %>
    <%= f.input :phone %>
    <%= f.input :direction %>
    <%= f.input :leader %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
