<%= link_to I18n.t('entity.new.title'), new_entity_path, :class => "button" %>

<h1><%= I18n.t('entity.index.title')%></h1>

<table>
  <tr>
    <th><%= I18n.t('entity.l.name')%></th>
    <th><%= I18n.t('entity.l.slogan')%></th>
    <th><%= I18n.t('entity.l.phone')%></th>
    <th><%= I18n.t('entity.l.direction')%></th>
    <th><%= I18n.t('entity.l.leader')%></th>
    <th><%= I18n.t('entity.l.description')%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entities.each do |entity| %>
  <tr>
    <td><%= entity.name %></td>
    <td><%= entity.slogan %></td>
    <td><%= entity.phone %></td>
    <td><%= entity.direction %></td>
    <td><%= entity.leader %></td>
    <td><%= entity.description %></td>
    <td><%= link_to I18n.t('show'), entity %></td>
    <td><%= link_to I18n.t('edit'), edit_entity_path(entity) %></td>
    <td><%= link_to I18n.t('destroy'), entity, confirm: I18n.t('entity.are_you_sure'), method: :delete %></td>
  </tr>
<% end %>
</table>

