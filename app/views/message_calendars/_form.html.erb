<h3>Para: <%= @message_calendar.message.name %></h3>
<%= simple_form_for(@message_calendar) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :message_id%>
  <div class="form-inputs">
    <%= f.input :start %>
    <%= f.input :stop %>
  </div>
  <div class="field">
    <%= f.input :max_clients, :input_html => {:maxlength => 6, :size => 5}%>
  </div>
  
  <hr />
  <div class="field">
    <%= f.input :channels, :input_html => {:maxlength => 2, :size => 2, :title => 'Cantidad de canales ha usar en este calendario.'}%>
  </div>
  <div class="field">
    <%= f.input :use_available_channels, :input_html => {:title => 'Al activar esta opcion, automaticamente se usaran los canales disponibles a medida que sea necesario en el tiempo, para completar la cantidad de clientes esperados en el calendario'}%>
  </div>
  <div class="field">
    <%= f.input :time_expected_for_call, :input_html => {:maxlength => 2, :size => 2, :title => 'Tiempo esperado por llamada esto es necesario si activa la opcion de usar canales disponibles'}%>
  </div>

  <div class="field">
    <%= f.input :notes%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
